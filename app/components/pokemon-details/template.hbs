<div class="col-md-7 col-sm-8">
    <div class="panel panel-default card-pokemon">
        <div class="panel-heading clearfix">
            <img class="img-circle pull-left" src={{model.pokemon.sprites.front_default}} alt="Mouse0270" />
            <h3>{{capitalize-first-letter model.pokemon.name}}</h3>
        </div>
        
        <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <div class="panel-heading">
                <h4 class="panel-title">Basic Information</h4>
            </div>
             <table class="table _stat-table">
            <tbody>
                <tr>
                    <td>Height</td>
                    <td>{{height model.pokemon.height}}</td>
                </tr>
                <tr>
                    <td>Weight:</td>
                    <td>{{weight model.pokemon.weight}}</td>
                </tr>
                <tr>
                    <td>Base experience:</td>
                    <td>{{model.pokemon.base_experience}}</td>
                </tr>
            </tbody>
             </table>
          </div>
          <div class="col-md-6">
              <div class="panel-heading">
                <h4 class="panel-title">Base Stats</h4>
              </div>
              <table class="table _stat-table">
                <tbody>
                    {{#each model.pokemon.stats as |statInfo|}}
                      <tr>
                        <td>{{capitalize-first-letter statInfo.stat.name}}</td>
                        <td>{{statInfo.base_stat}}</td>
                      </tr>
                    {{/each}}
                    <tr>
                      <td>Total</td>
                      <td>{{sum-stats model.pokemon.stats}}</td>
                    </tr>
                </tbody>
              </table>
          </div>
        </div>
        </div>
        
        
        <div class="panel-footer">
            <button class="btn btn-default"  data-toggle="modal" data-target="#comment-form-modal">Add comment
            </button>
            {{pokemon-details/comment-form 
                pokemon=model.pokemon
                sendComment=sendComment}}
        </div>
    </div>
    {{pokemon-details/comment-list 
        comments=model.comments}}
</div>

